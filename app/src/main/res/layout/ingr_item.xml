        android:layout_height="wrap_content"
        android:id="@+id/ingrItemTV"
        android:text="Ingredient Item"
        android:textSize="15dp"
        android:textFontWeight="@integer/google_play_services_version"
        />


    </FrameLayout>

</androidx.cardview.widget.CardView>